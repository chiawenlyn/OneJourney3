<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="RoundedButton">
    <item name="android:layout_width">120dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:background">@drawable/button_rounded</item>
    <item name="android:textColor">@color/colorWhite</item>
  </style>

  <style name="UneditableText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">20dp</item>
    <item name="android:textColor">@color/tiffany</item>
    <item name="android:editable">false</item>
  </style>

  <style name="NavigationViewStyle">
    <item name="android:textSize">13sp</item>
    <item name="android:listPreferredItemHeightSmall">25dp</item>
    <item name="android:listPreferredItemPaddingLeft">12dp</item>
    <item name="listPreferredItemPaddingLeft">15dp</item>

    <item name="android:listPreferredItemPaddingRight">8dp</item>
    <item name="listPreferredItemPaddingRight">12dp</item>

    <item name="android:listDivider">@color/colorBlack</item>
    <item name="android:textColorSecondary">@color/fade</item>
  </style>

  <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>


</resources>
